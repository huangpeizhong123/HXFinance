<?xml version="1.0" encoding="utf-8"?>
<com.hxnidc.hxfinance.widget.MainTabItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/view_main_tab_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:button="@null"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center_horizontal"
        android:textColor="@color/tab_text_selector"
        tools:drawableTop="@mipmap/ic_launcher"
        tools:text="@string/str_tab_nearby"/>

    <TextView
        android:id="@+id/view_main_tab_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/view_main_tab_icon"
        android:layout_alignTop="@id/view_main_tab_icon"
        android:layout_marginRight="-5dp"
        android:background="@drawable/red_dot_frame"
        android:clickable="false"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/view_main_tab_red_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignRight="@id/view_main_tab_icon"
        android:layout_alignTop="@id/view_main_tab_icon"
        android:layout_centerHorizontal="true"
        android:background="@drawable/red_dot_frame"
        android:clickable="false"
        android:visibility="gone"
        tools:visibility="visible"/>
</com.hxnidc.hxfinance.widget.MainTabItemView>